<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160sp"
    android:layout_marginStart="2sp"
    android:layout_margin="0dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8sp"
    app:cardElevation="6sp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--ImageVIew to display our Course Image-->
        <!--Text View to display Course Name-->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            >
        <TextView
            android:id="@+id/bunk_rv_subject_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:singleLine="true"
            android:text="Subject name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        </HorizontalScrollView>

        <!--Text VIew to display COurse Rating-->
        <!--Image used in present in drawable folder-->


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bunk_holder_increment_button"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="25sp"
            android:layout_marginTop="35sp"
            android:text="+"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bunk_holder_decrement_button"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="93sp"
            android:layout_marginTop="35sp"
            android:text="-"
            android:textSize="30sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10sp"
            android:layout_marginTop="36sp"
            android:text="Classes missed: " />
        <TextView
            android:id="@+id/bunk_rv_bunks_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 "
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="120sp"
            android:layout_marginTop="36sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attendance: "
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10sp"
            android:layout_marginTop="62sp"/>
        <TextView
            android:id="@+id/bunk_rv_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90sp"
            android:layout_marginTop="62sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10sp"
            android:layout_marginTop="86sp"
            android:text="Skips left:  " />
        <TextView
            android:id="@+id/bunk_rv_bunks_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90sp"
            android:layout_marginTop="86sp"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
