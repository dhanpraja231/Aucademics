<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160sp"
    android:layout_marginStart="2sp"
    android:layout_margin="0sp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8sp"
    app:cardElevation="6sp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--ImageVIew to display our Course Image-->
        <!--Text View to display Course Name-->
        <TextView
            android:id="@+id/subject_rv_subject_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="Subject name"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/subject_rv_subject_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="28sp"
            android:layout_marginTop="50sp"
            android:text="MA5354"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10sp"
            android:layout_marginTop="50sp"
            android:text="Grade: "
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10sp"
            android:layout_marginTop="96sp"
            android:text="credits: "
            android:textSize="20sp" />
        <TextView
            android:id="@+id/subject_rv_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="92sp"
            android:layout_marginTop="96sp"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/subject_rv_select_gpa"
            android:entries="@array/grades"
            android:layout_width="120sp"
            android:layout_height="27sp"
            android:layout_marginStart="80sp"
            android:layout_marginTop="50sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>
